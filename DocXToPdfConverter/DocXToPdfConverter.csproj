<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ApplicationIcon />
    <StartupObject />
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Version>1.0.4</Version>
    <Authors>Dr. Martin Weihrauch</Authors>
    <Company>Smart In Media</Company>
    <Copyright>(c) Smart In Media</Copyright>
    <Description>Report-From-DocX-HTML-To-PDF-Converter - Create custom reports based on Word docx or HTML documents and convert to PDF with .NET CORE</Description>
    <PackageProjectUrl>https://github.com/smartinmedia/Net-Core-DocX-HTML-To-PDF-Converter</PackageProjectUrl>
    <RepositoryUrl>https://github.com/smartinmedia/Net-Core-DocX-HTML-To-PDF-Converter</RepositoryUrl>
    <PackageTags>Docx, PDF, HTML, converter</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="3.3.0" />
    <PackageReference Include="IronSoftware.System.Drawing" Version="2025.3.6" />
    <PackageReference Include="SkiaSharp" Version="3.116.1" />
  </ItemGroup>

</Project>
